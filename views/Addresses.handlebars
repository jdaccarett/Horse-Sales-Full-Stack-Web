<html>

<head>
    <meta charset="utf-8">
    <title>Address</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
      
       <div id="navdiv">
            <!--Nav Bar-->
           <nav class="navbar alignRight">
            <ul class="nav">
                <li><a href="/">Home</a></li>
                <li><a href="http://localhost:3009/Breeds">Breeds</a></li>
                <li><a href="/">Test</a></li>
            </ul>
        </nav>

       </div>
       
<div class="form-group">
 
 <form action="/address">
     <input type="street"
         name="street" 
         class="form-control" 
         id="autocomplete" 
         placeholder="Street">
  
  <input type="city"
         name="city" 
         class="form-control" 
         id="inputCity" 
         placeholder="City">
  
  <input type="state"
         name="state"
         class="form-control" 
         id="inputState" 
         placeholder="State">
  
  <input type="zip"
         name="zipcode" 
         class="form-control" 
         id="inputZip" 
         placeholder="Zip">
  
  <input type="country"
         name="country_of_stay" 
         class="form-control" 
         id="inputCountry" 
         placeholder="Country">
  
  <input id="submit" type="submit" onclick="change()" value="Submit">
     
 </form>
 
    <div class="form-group">
        <button id="next"><a href="http://localhost:3009/Owner">NEXT STEP</a></button>
    </div>
  
</div>
        
    
</body>

<script>
    var submit = document.getElementById('submit');
    var next = document.getElementById('next');

        document.getElementById('submit').addEventListener('click', function (event) {
            next.style.display = 'block';
            next.style.backgroundColor = "mediumspringgreen";
        });
</script>
</html>
<html>

<head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="css/style.css">

</head>

<body>
<h1>Change Horse Price</h1>
<div class="form-group">

    <form action="/price-change">
        <br>
        <input type="text" name="animal_id" id="animal_id" placeholder="Enter Horse ID">
        <br>
        <input type="text" name="price" id="price" placeholder="Enter New Price">
        <br>
        <br>
        <input type="submit" id="submit" value="Submit"> </form>
        
    <div class="form-group">
        <button style="display: none;" id="next" onclick="window.location.href='/forsale'">CLICK TO CONTINUE</button>
    </div>
</div>
</body>
<script>
    var submit = document.getElementById('submit');
    var next = document.getElementById('next');
    

        document.getElementById('submit').addEventListener('click', function (event) {
            next.style.display = 'block';
            next.style.backgroundColor = "mediumspringgreen";
        });
</script>
</html>